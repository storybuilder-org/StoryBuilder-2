<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    xmlns:usercontrols="using:StoryBuilder.Controls">
    <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources  xmlns="using:Microsoft.UI.Xaml.Controls"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Overrides to default styles based on TargetType.
         Note that implicit overrides (so that a control can be styled
         without specifying a key) require creating an explicit (keyed)
         style before the implicit style in order to have our implicit
         styles override, rather than replace, the WinUI defaults.
    -->

    <Style x:Key="MyButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="CornerRadius" Value="4"/>
    </Style>


    <Style TargetType="Button" BasedOn="{StaticResource MyButton}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style TargetType="editors:SfComboBox">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="usercontrols:RichEditBoxExtended">
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="IsSpellCheckEnabled" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="5"/>

    </Style>

    <!-- Note: Using a style appears to override some of the things winui3 does such rounded corners
        You may have to add some extras here, such as corner radius
    -->

    <Style x:Key="centrefield" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="EntryField" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="PathField" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Width" Value="435"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>

    <Style x:Key="PaddedGrid" TargetType="Grid">
        <Setter Property="Margin" Value="8,12"/>
    </Style>

    <Style x:Key="NameBox" TargetType="TextBox">
        <Setter Property="Margin" Value="10,10,10,0"/>
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Header" Value="Name"/>
    </Style>
    <Style x:Key="SmallBox" TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="SymbolButton" TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>


</ResourceDictionary>
